<h1 align="center">List of all concepts</h1>

<% @concepts.each do |concept| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="concept-title">
          <%= link_to concept.category, concept_path(concept) %>
        </div>
        <div class="concept-body">
          <%= truncate(concept.description, length: 100) %>
        </div>
        <div class="concept-body">
          <%= concept.status %>
        </div>
        <div class="concept-body">
          <%= concept.link %>
        </div>
        <div class="concept-body">
          <%= concept.name %>
        </div>
        <div class="concept-body">
          <%= concept.email %>
        </div>
        <div class="concept-body">
          <%= concept.need %>
        </div>
        <div class="concept-actions">
          <%= link_to "Edit this concept", edit_concept_path(concept), class: "btn btn-xs btn-primary" %> |
          <%= link_to "Delete this concept", concept_path(concept), method: :delete, 
            data: { confirm: "Are you sure you want to delete the Concept?"},
            class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
