<h2 align="center">Guidance: <%= @guidance.title %></h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <% if @guidance.user %>
      <ul class="listing">
        <div class="row center">
          <div class="col-md-4 col-md-offset-4">
            
          </div>
        </div>
      </ul>
    <% end %>
  <h4 class="center description"><strong>Title:</strong></h4>
  <hr>
  <%= simple_format(@guidance.title) %>
  
  <h4 class="center"><strong>Growth guidance:</strong></h4>
  <hr>
  <%= simple_format(@guidance.guidance) %>
  
  <h4 class="center"><strong>Author:</strong></h4>
  <hr>
  <%= simple_format(@guidance.author) %>
  
  <h4 class="center"><strong>Author Bio:</strong></h4>
  <hr>
  <%= simple_format(@guidance.author_bio) %>
  
  <h4 class="center"><strong>Author email:</strong></h4>
  <hr>
  <%= simple_format(@guidance.email) %>
  
  <h4 class="center"><strong>Author website:</strong></h4>
  <hr>
  <%= simple_format(@guidance.web) %>

  <div class="concept-actions">
    <% if logged_in? && (current_user == @guidance.user || current_user.admin?) %>
      <%= link_to "Edit this guidance", edit_guidance_path(@guidance), class: "btn btn-xs btn-primary" %> |
      <%= link_to "Delete this guidance", guidance_path(@guidance), method: :delete, 
        data: { confirm: "Are you sure you want to delete the guidance?"},
        class: "btn btn-xs btn-danger" %> |
    <% end %>
    <%= link_to "View all guidances", guidances_path, class: "btn btn-success btn-xs" %>
  </div>
</div>