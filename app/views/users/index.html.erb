<h1 align="center">All Advance2Green users</h1>
<div align="center">
  <div align="center"><%= will_paginate %></div>
    <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class="well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="concept-title"><%= link_to user.username, user_path(user) %></li>
            <li><small><%= pluralize(user.concepts.count, "concept") if user.concepts %></small></li>
            <% if logged_in? and current_user.admin? %>
              <li><%= link_to "Delete this user", user_path(user), method: :delete, 
                  data: { confirm: "Are you sure you want to delete user and all their concepts" } %></li>
            <% end %>
          </div>
        </div>
      </ul>
    <% end %>
  <div align="center"><%= will_paginate %></div>
</div>