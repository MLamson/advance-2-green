<h1 align="center">Login</h1>

  <%= form_for(:session, url: login_path) do |c| %>
    <div class='form-group'>
      <p>
        <%= c.label :email, "Email" %><br>
        <%= c.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </p>
    </div>
    <div class='form-group'>
      <p>
        <%= c.label :password, "Password" %><br>
        <%= c.password_field :password, class: "form-control", autocomplete: "off" %>
      </p>
    </div>
    <div class='form-group'>
      <p>
        <%= c.submit "Log in", class: 'btn btn-primary btn-lg' %><br>
      </p>
    </div>
  
  <% end %>
  <div class="col-xs-4 col-xs-offset-4">
    <%= link_to "Cancel request and return to concept listing", concepts_path %>
  </div>