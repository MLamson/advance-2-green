<h2 align="center">Category: <%= @concept.category %></h2>
  <div class="well col-xs-8 col-xs-offset-2">
    <% if @concept.user %>
      <ul class="listing">
        <div class="row center">
          <div class="col-md-4 col-md-offset-4">
            <li>Created by:</li>
            <li><%= link_to gravatar_for(@concept.user), user_path(@concept.user) %></li>
            <li class="concept-title"><%= link_to @concept.user.username, user_path(@concept.user) %></li>
            <li><small><%= pluralize(@concept.user.concepts.count, "concept") %> if @concept.user.concepts</small></li>
          </div>
        </div>
      </ul>
    <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@concept.description) %>
  
  <h4 class="center"><strong>Web:</strong></h4>
  <hr>
  <%= simple_format(@concept.link) %>
  
  <h4 class="center"><strong>Status:</strong></h4>
  <hr>
  <%= simple_format(@concept.status) %>
  
  <h4 class="center"><strong>Name:</strong></h4>
  <hr>
  <%= simple_format(@concept.name) %>
  
  <h4 class="center"><strong>Email:</strong></h4>
  <hr>
  <%= simple_format(@concept.status) %>
  
  <h4 class="center"><strong>Need:</strong></h4>
  <hr>
  <%= simple_format(@concept.need) %>

  <div class="concept-actions">
    <% if logged_in? && (current_user == @concept.user || current_user.admin?) %>
      <%= link_to "Edit this concept", edit_concept_path(@concept), class: "btn btn-xs btn-primary" %> |
      <%= link_to "Delete this concept", concept_path(@concept), method: :delete, 
        data: { confirm: "Are you sure you want to delete the Concept?"},
        class: "btn btn-xs btn-danger" %> |
    <% end %>
    <%= link_to "View all concept", concepts_path, class: "btn btn-success btn-xs" %>
  </div>
</div>